<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <meta property="og:locale" content="{{CUR_LANG}}_{{CUR_LANG|upper}}"/>
        <meta content="WebApp" property="og:type"/>
        <meta content="Light Money web app" property="og:title"/>
        <meta content="Light, votre solution ultime pour l'administration de votre site web." property="og:description"/>
        <meta content="https://www.imediatis.net/" property="og:url"/>
        <meta content="La Solution d'échange financière" property="og:site_name"/>
        <meta property="og:image" content="{{ base_url() }}/ico/favicon.ico"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="ie=edge" http-equiv="X-UA-Compatible">
        <link rel="shortcut icon" href="{{ base_url() }}/ico/{{Reseller.icon}}">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <link href="{{ base_url() }}/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ base_url() }}/font-awesome/css/font-awesome.css" rel="stylesheet">

        <link href="{{ base_url() }}/css/animate.css" rel="stylesheet">
        <link href="{{ base_url() }}/css/style.css" rel="stylesheet">
        <link href="{{ base_url() }}/css/ime.master.css" rel="stylesheet">
        <link href="{{ base_url() }}/css/alertifyjs/alertify.min.css" rel="stylesheet">
        <link href="{{ base_url() }}/css/alertifyjs/themes/default.min.css" rel="stylesheet">
        <title>{{appEnv.appName}}|{{title}}
        </title>

    </head>

    <body class="black-bg">

        <div class="middle-box text-left loginscreen animated fadeInDown">
            <div>
                <div>

                    <h1 class="logo-name">LG+</h1>

                </div>
                <h3>{{LexiqueGetString('welcome-to')}}
                    {{appEnv.appName}}+</h3>
                <p>{{LexiqueGetString('login-in')}}</p>
                {{flashMsg()}}
                <form class="m-t" role="form" action="{{path_for('login')}}" method="POST">
                    {{ getCsrfInput() }}

                    <div class="form-group {{ modelErrors.login_usr ? 'has-error' }}">
                        <input type="text" name="login_usr" class="form-control" placeholder="{{LexiqueGetString('user-name')}}" required value="{{Model.login_usr}}" autocomplete="off">
                        {% if modelErrors.login_usr %}
                            <span class="help-block">{{modelErrors.login_usr}}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{modelErrors.pwd_usr ? 'has-error'}}">

                        <input type="password" name="pwd_usr" class="form-control" placeholder="{{LexiqueGetString('password')}}" required value="{{Model.pwd_usr}}" autocomplete="off">
                        {% if modelErrors.pwd_usr %}
                            <span class="help-block">{{modelErrors.pwd_usr}}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{modelErrors.boxKey ? 'has-error'}}">

                        <input type="text" name="boxKey" class="form-control" placeholder="{{LexiqueGetString('box-code')}}" required value="{{Model.boxKey}}" autocomplete="off">
                        {% if modelErrors.boxKey %}
                            <span class="help-block">{{modelErrors.boxKey}}</span>
                        {% endif %}
                    </div>

                    <button class="btn btn-primary block full-width m-b" type="submit">{{LexiqueGetString('login')}}</button>
                    <a href="#">
                        <small>{{LexiqueGetString('forgot-password')}}</small>

                    </a>
                </form>
                {% if loFromOther %}
                    <form action="{{path_for('account.logout.force')}}" class="m-t" role="form" name="forceLogout" method="POST">
                        {{ getCsrfInput() }}
                        <input type="hidden" name="login" id="login" value="{{login}}"/>
                        <button class="btn btn-link block full-width m-b" type="submit">
                            <i class="fa fa-unlink m-r-sm g-font-size-20"></i>
                            <span class="text-danger">{{LexiqueGetString('logout-from-all-other-com')}}</span>
                        </button>
                    </form>
                {% endif %}

                <p class="m-t">
                    <small>{{appEnv.appName}}
                        &copy;
                        {{"now"|date("Y")}}
                    </small>
                </p>
            </div>
        </div>

        <script src="{{ base_url() }}/js/jquery-3.1.1.min.js"></script>
        <script src="{{ base_url() }}/js/bootstrap.min.js"></script>
        <script src="{{ base_url() }}/js/alertify.min.js"></script>

    </body>

</html>
